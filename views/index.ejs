<%- include("partials/header.ejs") %>

<div class="indexContainer">
  <% if(limit !== 0) { %>
    <% for (let i = 0; i < limit; i++){ %>
      <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
        <div class="col-lg-6 px-0">
          <h1 class="display-4 fst-italic"><%= titleData[i] %></h1>
          <p class="lead my-3"><%= blogData[i].slice(0, 100) %> ....</p>
          <% var myLink = `/postPage?variable=${i}` %>
          <p class="lead mb-0"><a href=<%= myLink %> class="text-body-emphasis fw-bold">Continue reading...</a></p>
        </div>
      </div>

    <% } %> 
    
  <% } else {%>
    <h2>Write the first blog....</h2>
  <% } %>
</div> 
 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="js/main.js"></script>

